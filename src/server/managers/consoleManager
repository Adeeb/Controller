/**
 * @file consoleManager.js
 * @author Zishan Iqbal
 * @description This file includes the CURD operations for the console Model.
 */

import Console from './../models/console';
import BaseManager from './../managers/baseManager';

class ConsoleManager extends BaseManager {

  getEntity() {
      return Console;
    }
    /**
     * @desc - finds the Console based on the instanceId
     * @param Integer - instanceId
     * @return JSON - returns a JSON object of console
     */
  findByInstanceId(instanceId) {
      return Console.find({
        where: {
          iofabric_uuid: instanceId
        }
      });
    }
    /**
     * @desc - deletes the console based on the instanceId
     * @param String - instanceId
     * @return  Integer - returns the number of rows deleted
     */
  deleteByInstanceId(instanceId) {
    return Console.destroy({
      where: {
        iofabric_uuid: instanceId
      }
    });
  }
}

const instance = new ConsoleManager();
export default instance;